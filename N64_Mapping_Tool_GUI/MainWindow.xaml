<Window x:Class="N64Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Moltard's N64 Mapping Tool" Height="500" Width="800" Icon="icon.ico"
        MinHeight="500" MinWidth="800">

    <Window.Resources>

        <sys:Double x:Key="WindowHeight">450</sys:Double>
        
        <SolidColorBrush x:Key="BG_Color" Color="LightGray" />
        <Thickness x:Key="MarginColumnObj" Left="2" Top="0"/>
        <Thickness x:Key="MarginBaseGridObj" Left="0" Top="2"/>
        <Thickness x:Key="MarginCheckbox" Left="5" Top="5"/>
        <Thickness x:Key="MarginCheckbox2" Left="0" Top="5"/>
        <Thickness x:Key="MarginSeparator" Left="0" Top="2"/>
        <sys:String x:Key="DefaultComboBox">---</sys:String>

        <Style TargetType="TextBlock" x:Key="PageTitle">
            <Setter Property="Margin" Value="5 10 5 10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ParagraphText">
            <Setter Property="Margin" Value="10 0 10 0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubParagraphText">
            <Setter Property="Margin" Value="5 5 5 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubParagraphText2">
            <Setter Property="Margin" Value="5 5 5 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="BrowseText">
            <Setter Property="Margin" Value="5 10 0 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBox" x:Key="BrowseBox">
            <Setter Property="Margin" Value="10 5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button" x:Key="BrowseFileButton">
            <Setter Property="Margin" Value="10 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="CornflowerBlue"/>
        </Style>
        <Style TargetType="Button" x:Key="BrowseFolderButton">
            <Setter Property="Margin" Value="10 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="MediumSeaGreen"/>
        </Style>

        <Style TargetType="Button" x:Key="SaveButtonLeft">
            <Setter Property="Margin" Value="30 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="SandyBrown"/>
        </Style>
        <Style TargetType="Button" x:Key="SaveButtonRight">
            <Setter Property="Margin" Value="10 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="SandyBrown"/>
        </Style>

        <Style TargetType="Button" x:Key="SaveButtonCenter">
            <Setter Property="Margin" Value="10 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="SandyBrown"/>
        </Style>


        <Style TargetType="TextBlock" x:Key="NonUniformScaleText">
            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
        <Style TargetType="TextBox" x:Key="NonUniformScaleBox">
            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="FlipMirrorImageText">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0 2"/>
        </Style>
        
        <Style TargetType="Image" x:Key="FlipMirrorImage">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Stretch" Value="None"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        


        <DataTemplate x:Key="TextureBlackListTemplate" >
            <TextBlock Text="{Binding}"/>
        </DataTemplate>

        <DataTemplate x:Key="MergeObjSpecListTemplate" >
            <TextBlock Text="{Binding}"/>
        </DataTemplate>
        
        

        <DataTemplate x:Key="GameBlackListTemplate" >
            <!--<ComboBoxItem Content="{Binding Path=Name}" />-->
            
            <TextBlock Text="{Binding  Path=Name}"/>
        </DataTemplate>

    </Window.Resources>

    <!-- <LineBreak/> -->

    <Border Padding="5" Background="{StaticResource BG_Color}">

        <StackPanel>
            <!--Height="{StaticResource WindowHeight}" -->
            <TabControl BorderThickness="2" Background="{StaticResource BG_Color}">

                <!--WRL to OBJ-->
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Wrl To Obj"/>
                    </TabItem.Header>
                    <StackPanel Background="{StaticResource BG_Color}">
                        <TextBlock Style="{StaticResource PageTitle}">Wrl To Obj</TextBlock>
                        <TextBlock Style="{StaticResource ParagraphText}">
                            Convert a .wrl file to .obj
                        </TextBlock>

                        <Separator Margin="{StaticResource MarginSeparator}"/>


                        <TabControl Margin="5 10" BorderThickness="1" Background="{StaticResource BG_Color}">
                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Convert a Wrl file"/>
                                </TabItem.Header>
                                <StackPanel Name="WrlDragDrop" AllowDrop="True" Drop="WrlDragDrop_Drop">
                                    <TextBlock Style="{StaticResource BrowseText}">Select a wrl file</TextBlock>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Name="WrlBrowseBox" Style="{StaticResource BrowseBox}" Grid.Column="0" TextChanged="WrlBrowseBox_TextChanged" PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="WrlDragDrop_Drop"/>
                                        <Button Name="WrlBrowseButton" Style="{StaticResource BrowseFileButton}" Grid.Column="1" Click="WrlBrowseButton_Click">Browse</Button>
                                    </Grid>



                                    <!--Reverse Vertex Order-->
                                    <CheckBox Name="WrlModifyVertex" HorizontalAlignment="Center" ToolTip="Reverse every vertices of the model" Margin="{StaticResource MarginCheckbox2}">Reverse Vertex Order</CheckBox>

                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>

                                    </Grid>

                                    <Button Name="WrlSaveButton" Style="{StaticResource SaveButtonCenter}" IsEnabled="False" Click="WrlSaveButton_Click">Convert to Obj</Button>


                                </StackPanel>
                            </TabItem>
                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Convert multiple Wrl files"/>
                                </TabItem.Header>
                                <StackPanel Name="WrlsDragDrop" AllowDrop="True" Drop="WrlsDragDrop_Drop">
                                    <TextBlock Style="{StaticResource BrowseText}">Select a folder</TextBlock>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Name="WrlsBrowseBox" Style="{StaticResource BrowseBox}" Grid.Column="0" TextChanged="WrlsBrowseBox_TextChanged" PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="WrlsDragDrop_Drop"
                                                 ToolTip="It will convert every .wrl files in this folder and subfolders" />
                                        <Button Name="WrlsBrowseButton" Style="{StaticResource BrowseFileButton}" Grid.Column="1" Click="WrlsBrowseButton_Click">Browse</Button>
                                    </Grid>



                                    <!--Reverse Vertex Order-->
                                    <CheckBox Name="WrlsModifyVertex" HorizontalAlignment="Center" ToolTip="Reverse every vertices of the model" Margin="{StaticResource MarginCheckbox2}">Reverse Vertex Order</CheckBox>

                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>

                                    </Grid>

                                    <Button Name="WrlsSaveButton" Style="{StaticResource SaveButtonCenter}" IsEnabled="False" Click="WrlsSaveButton_Click">Convert to Obj</Button>


                                </StackPanel>
                            </TabItem>

                            <!--
                            <TextBlock Style="{StaticResource BrowseText}">Select a folder</TextBlock>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Name="MergeObjFolderBrowseBox" Style="{StaticResource BrowseBox}" Grid.Column="0" TextChanged="MergeObjFolderBrowseBox_TextChanged" PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="MergeObjFolderBrowseBox_PreviewDrop"/>
                                        <Button Name="MergeObjFolderBrowseButton" Style="{StaticResource BrowseFileButton}" Grid.Column="1" Click="MergeObjFolderBrowseButton_Click">Browse</Button>
                                    </Grid>

                                    <Button Name="MergeObjFolderSaveButton" Style="{StaticResource SaveButtonCenter}" IsEnabled="False" Click="MergeObjFolderSaveButton_Click">Merge Obj Files</Button>

                            -->

                        </TabControl>



         
                    </StackPanel>
                </TabItem>

                <!--OBJ Tools-->
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Obj Tools"/>
                    </TabItem.Header>
                    <StackPanel Name="ObjDragDrop" Background="{StaticResource BG_Color}" AllowDrop="True" Drop="ObjDragDrop_Drop">

                        <TextBlock Style="{StaticResource PageTitle}">Obj Tools</TextBlock>
                        <TextBlock Style="{StaticResource ParagraphText}">
                            Bunch of tools related to .obj file
                        </TextBlock>

                        <Separator Margin="{StaticResource MarginSeparator}"/>

                        <TextBlock Style="{StaticResource BrowseText}">Select an obj file</TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="ObjBrowseBox" Style="{StaticResource BrowseBox}" Grid.Column="0" TextChanged="ObjBrowseBox_TextChanged" PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="ObjDragDrop_Drop" />
                            <Button Name="ObjBrowseButton" Style="{StaticResource BrowseFileButton}" Grid.Column="1" Click="ObjBrowseButton_Click">Browse</Button>
                        </Grid>

                        <TabControl Margin="5" Padding="5" BorderThickness="1" Background="{StaticResource BG_Color}">

                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Delete Materials"/>
                                </TabItem.Header>
                                <StackPanel Background="{StaticResource BG_Color}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource SubParagraphText}">
                                            Delete every materials from the obj file
                                        </TextBlock>
                                        <Button Name="ObjDeleteMaterialsButton"  Grid.Column="1" Style="{StaticResource SaveButtonRight}" IsEnabled="False" Click="ObjDeleteMaterialsButton_Click">Delete Materials</Button>
                                    </Grid>

                                    <Separator />

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource SubParagraphText}">
                                            Delete all unused materials from the obj file
                                        </TextBlock>
                                        <Button Name="ObjDeleteUnusedMaterialsButton" Grid.Column="1" Style="{StaticResource SaveButtonRight}" IsEnabled="False" Click="ObjDeleteUnusedMaterialsButton_Click" >
                                            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Delete Unused Materials</TextBlock>
                                        </Button>
                                    </Grid>

                                </StackPanel>
                            </TabItem>
                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Add Materials"/>
                                </TabItem.Header>
                                <StackPanel Background="{StaticResource BG_Color}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource SubParagraphText}">
                                        Automatically create materials and assign textures to each object of the .obj<LineBreak/>
                                        Objects names need to contain the texture name
                                        </TextBlock>
                                        <Button Name="ObjAddMaterialsButton" Grid.Column="1" Style="{StaticResource SaveButtonRight}" IsEnabled="False" Click="ObjAddMaterialsButton_Click">Add Materials</Button>
                                    </Grid>

                                </StackPanel>
                            </TabItem>

                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Modify Obj"/>
                                </TabItem.Header>
                                <StackPanel Background="{StaticResource BG_Color}">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource SubParagraphText}">
                                        Modify the .obj file based on your selection<LineBreak/>
                                        Some options require the .obj file to have an associated .mtl file
                                        </TextBlock>
                                        <Button Name="ObjModifyButton" Grid.Column="1" Style="{StaticResource SaveButtonRight}" IsEnabled="False" Click="ObjModifyButton_Click">Modify Obj</Button>
                                    </Grid>

                                    <Separator Margin="{StaticResource MarginSeparator}"/>

                                    <!--Reverse Vertex Order-->
                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Name="ObjModifyVertex" Grid.Column="0" HorizontalAlignment="Left" ToolTip="Reverse every vertices of the model">Reverse Vertex Order</CheckBox>
                                    </Grid>

                                    <!--Merge-->
                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Name="ObjModifyMerge" Grid.Column="0" HorizontalAlignment="Left" ToolTip="Merge together groups &amp; materials sharing a texture">Merge Groups &amp; Materials</CheckBox>
                                    </Grid>

                                    <!--Sort-->
                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Name="ObjModifySort" HorizontalAlignment="Left" Grid.Column="0" ToolTip="Sort groups &amp; materials by name alphabetically">Sort Groups &amp; Materials</CheckBox>
                                    </Grid>

                                    <!--Uniform Scaling-->
                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Name="ObjModifyUniformScale" Grid.Column="0" HorizontalAlignment="Left" ToolTip="Scale uniformly the model by the specified value" Checked="ObjModifyUniformScale_Changed" Unchecked="ObjModifyUniformScale_Changed">Uniform Scaling</CheckBox>
                                        <Grid Grid.Column="1" Margin="{StaticResource MarginColumnObj}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="4*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0" Margin="{StaticResource MarginColumnObj}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource NonUniformScaleText}">XYZ</TextBlock>
                                                <TextBox Name="ObjModifyScaleValueXYZ" Grid.Column="1" Style="{StaticResource NonUniformScaleBox}" IsEnabled="False">1.0</TextBox>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <!--Non Uniform Scaling-->
                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Name="ObjModifyNonUniformScale" Grid.Column="0" HorizontalAlignment="Left" ToolTip="Scale non uniformly the model by the specified values" Checked="ObjModifyNonUniformScale_Changed" Unchecked="ObjModifyNonUniformScale_Changed">Non Uniform Scaling</CheckBox>
                                        <Grid Grid.Column="1" Margin="{StaticResource MarginColumnObj}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Margin="{StaticResource MarginColumnObj}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource NonUniformScaleText}">X</TextBlock>
                                                <TextBox Name="ObjModifyScaleValueX" Grid.Column="1" Style="{StaticResource NonUniformScaleBox}" IsEnabled="False">1.0</TextBox>
                                            </Grid>
                                            <Grid Grid.Column="1" Margin="{StaticResource MarginColumnObj}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource NonUniformScaleText}">Y</TextBlock>
                                                <TextBox Name="ObjModifyScaleValueY" Grid.Column="1" Style="{StaticResource NonUniformScaleBox}" IsEnabled="False">1.0</TextBox>
                                            </Grid>
                                            <Grid Grid.Column="2" Margin="{StaticResource MarginColumnObj}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource NonUniformScaleText}">Z</TextBlock>
                                                <TextBox Name="ObjModifyScaleValueZ" Grid.Column="1" Style="{StaticResource NonUniformScaleBox}" IsEnabled="False">1.0</TextBox>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <!--Rotate Model-->
                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Name="ObjModifyRotate" Grid.Column="0" HorizontalAlignment="Left" ToolTip="Rotate the model by the specified values" Checked="ObjModifyRotate_Changed" Unchecked="ObjModifyRotate_Changed">Rotate Model</CheckBox>
                                        <Grid Grid.Column="1" Margin="{StaticResource MarginColumnObj}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Margin="{StaticResource MarginColumnObj}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource NonUniformScaleText}">X</TextBlock>
                                                <TextBox Name="ObjModifyRotateValueX" Grid.Column="1" Style="{StaticResource NonUniformScaleBox}" IsEnabled="False">0.0</TextBox>
                                            </Grid>
                                            <Grid Grid.Column="1" Margin="{StaticResource MarginColumnObj}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource NonUniformScaleText}">Y</TextBlock>
                                                <TextBox Name="ObjModifyRotateValueY" Grid.Column="1" Style="{StaticResource NonUniformScaleBox}" IsEnabled="False">0.0</TextBox>
                                            </Grid>
                                            <Grid Grid.Column="2" Margin="{StaticResource MarginColumnObj}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource NonUniformScaleText}">Z</TextBlock>
                                                <TextBox Name="ObjModifyRotateValueZ" Grid.Column="1" Style="{StaticResource NonUniformScaleBox}" IsEnabled="False">0.0</TextBox>
                                            </Grid>
                                        </Grid>

                                    </Grid>

                                    <!--Textures BlackList-->
                                    <Grid Margin="{StaticResource MarginBaseGridObj}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="5*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox IsEnabled="True" Name="ObjModifyBlackList" Grid.Column="0" HorizontalAlignment="Left" ToolTip="Delete objects that use specific textures (See Textures Blacklist Settings for more info)" 
                                                  VerticalAlignment="Center" Checked="ObjModifyBlackList_Changed" Unchecked="ObjModifyBlackList_Changed">Delete Objects through Blacklist</CheckBox>
                                        <Grid Grid.Column="1" Margin="{StaticResource MarginColumnObj}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" FontWeight="SemiBold" Margin="2 0" TextAlignment="Left" VerticalAlignment="Center">Game:</TextBlock>

                                            <ComboBox Name="ObjModifyBlackListSelect" Grid.Column="1" Padding="2" IsEnabled="False"
                                                                      ItemsSource="{Binding}" ItemTemplate="{StaticResource GameBlackListTemplate}" />

                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </TabItem>

                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Obj To Smd"/>
                                </TabItem.Header>
                                <StackPanel Background="{StaticResource BG_Color}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource SubParagraphText}">
                                            Convert a .obj file to .smd
                                        </TextBlock>
                                        <Button Name="ObjToSmdButton"  Grid.Column="1" Style="{StaticResource SaveButtonRight}" IsEnabled="False" Click="ObjToSmdButton_Click">Convert to Smd</Button>
                                    </Grid>
                                    <Separator/>
                                    <CheckBox Name="ObjToSmdTextureCheckbox" HorizontalAlignment="Center" Margin="{StaticResource MarginCheckbox}" IsChecked="False" ToolTip="If checked, the model will look for vmt files named like the textures">Use the textures of the model</CheckBox>

                                </StackPanel>
                            </TabItem>

                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Reference Model"/>
                                </TabItem.Header>
                                <StackPanel Background="{StaticResource BG_Color}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource SubParagraphText}">
                                            Convert a .obj file to .smd at a given scale and without any material
                                        </TextBlock>
                                        <Button Name="RefModelToSmdButton"  Grid.Column="1" Style="{StaticResource SaveButtonRight}" IsEnabled="False" Click="RefModelToSmdButton_Click">Convert to Smd</Button>
                                    </Grid>
                                    <Separator/>

                                    <TextBlock Style="{StaticResource BrowseText}">Select a scale</TextBlock>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="5*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Name="RefModelScaleValueXYZ" Style="{StaticResource BrowseBox}" Grid.Column="0">1.0</TextBox>
                                    </Grid>
                                    
                                </StackPanel>
                            </TabItem>

                            <TabItem>
                                <TabItem.Header>
                                    <TextBlock Text="Copy Textures"/>
                                </TabItem.Header>
                                <StackPanel Background="{StaticResource BG_Color}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource SubParagraphText}">
                                        Copy every textures used by the .obj file into the specified folder<LineBreak/>
                                        Requires the .obj file to have an associated .mtl file<LineBreak/>
                                        If you dont specify a texture folder, it will find textures relative to the .obj file
                                        </TextBlock>
                                        <Button Name="CopyTexturesButton" Grid.Column="1"  Style="{StaticResource SaveButtonRight}" IsEnabled="False" Click="CopyTexturesButton_Click" >Copy Textures</Button>

                                    </Grid>


                                    <Separator Margin="{StaticResource MarginSeparator}"/>

                                    <TextBlock Style="{StaticResource BrowseText}">Select the output folder</TextBlock>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Name="CopyTextureOutputBox" Style="{StaticResource BrowseBox}" Grid.Column="0" TextChanged="CopyTextureOutputBox_TextChanged" PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="CopyTextureOutputDragDrop_Drop" ToolTip="// = 'Output folder' is the Folder of the obj file" />
                                        <Button Name="CopyTextureOutputButton" Style="{StaticResource BrowseFolderButton}" Grid.Column="1" Click="CopyTextureOutputButton_Click">Browse</Button>
                                    </Grid>

                                    <TextBlock/>

                                    <!--Load a specific folder-->
