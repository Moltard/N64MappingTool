                                        <Image Grid.Column="3" Grid.Row="1" Source="./Images/Base_32_BW_Negative.png" Style="{StaticResource FlipMirrorImage}"/>

                                    </Grid>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </StackPanel>
                </TabItem>
                
