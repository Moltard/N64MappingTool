                                        <TextBlock Grid.Column="1" Style="{StaticResource FlipMirrorImageText}">Negative</TextBlock>
                                        <Image Grid.Column="1" Grid.Row="1" Source="./Images/Base_32_Negative.png" Style="{StaticResource FlipMirrorImage}"/>

