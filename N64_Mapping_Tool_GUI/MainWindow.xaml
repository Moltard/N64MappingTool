<Window x:Class="N64Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Moltard's N64 Mapping Tool" Height="550" Width="950" Icon="icon.ico"
        MinHeight="550" MinWidth="950" SizeToContent="Manual">

    <Window.Resources>

        <!--#region Strings-->

        <!--#region Strings - Values-->

        <sys:String x:Key="DefaultScaleValue">1.0</sys:String>
        <sys:String x:Key="DefaultRotationValue">0.0</sys:String>

        <!--#endregion-->

        <!--#region Strings - Images-->

        <sys:String x:Key="TextImageBase">Base Image</sys:String>
        <sys:String x:Key="TextImageFlipHorizontally">Flip Horizontally</sys:String>
        <sys:String x:Key="TextImageFlipVertically">Flip Vertically</sys:String>
        <sys:String x:Key="TextImageFlipHorizontallyVertically">Flip Horizontally &amp; Vertically</sys:String>
        <sys:String x:Key="TextImageMirrorHorizontally">Mirror Horizontally</sys:String>
        <sys:String x:Key="TextImageMirrorVertically">Mirror Vertically</sys:String>
        <sys:String x:Key="TextImageMirrorHorizontallyVertically">Mirror Horizontally &amp; Vertically</sys:String>
        <sys:String x:Key="TextImageChainTexture">Texture</sys:String>
        <sys:String x:Key="TextImageChainAlpha">Alpha</sys:String>
        <sys:String x:Key="TextImageChainTransparent">Output</sys:String>
        <sys:String x:Key="TextImageNegative">Negative</sys:String>
        <sys:String x:Key="TextImageBaseBW">Base Image 2</sys:String>
        <sys:String x:Key="TextImageNegativeBW">Negative 2</sys:String>

        <BitmapImage x:Key="PathImageBase">./Images/Base_32.png</BitmapImage>
        <BitmapImage x:Key="PathImageFlipHorizontally">./Images/Base_32_FlipHorizontally.png</BitmapImage>
        <BitmapImage x:Key="PathImageFlipVertically">./Images/Base_32_FlipVertically.png</BitmapImage>
        <BitmapImage x:Key="PathImageFlipHorizontallyVertically">./Images/Base_32_FlipHorizontallyVertically.png</BitmapImage>
        <BitmapImage x:Key="PathImageMirrorHorizontally">./Images/Base_32_MirrorHorizontally.png</BitmapImage>
        <BitmapImage x:Key="PathImageMirrorVertically">./Images/Base_32_MirrorVertically.png</BitmapImage>
        <BitmapImage x:Key="PathImageMirrorHorizontallyVertically">./Images/Base_32_MirrorHorizontallyVertically.png</BitmapImage>
        <BitmapImage x:Key="PathImageChainTexture">./Images/Chain_Texture.png</BitmapImage>
        <BitmapImage x:Key="PathImageChainAlpha">./Images/Chain_Alpha.png</BitmapImage>
        <BitmapImage x:Key="PathImageChainTransparent">./Images/Chain_Transparent.png</BitmapImage>
        <BitmapImage x:Key="PathImageNegative">./Images/Base_32_Negative.png</BitmapImage>
        <BitmapImage x:Key="PathImageBaseBW">./Images/Base_32_BW.png</BitmapImage>
        <BitmapImage x:Key="PathImageNegativeBW">./Images/Base_32_BW_Negative.png</BitmapImage>

        <!--#endregion-->

        <!--#region Strings - Titles-->

        <sys:String x:Key="TextTitleWrlToObj">Wrl To Obj</sys:String>
        <sys:String x:Key="TextTitleObjTools">Obj Tools</sys:String>
        <sys:String x:Key="TextTitleCopyTextures">Copy Textures</sys:String>
        <sys:String x:Key="TextTitleMergeObj">Merge Obj Files</sys:String>
        <sys:String x:Key="TextTitleFlipTexture">Flip Texture</sys:String>
        <sys:String x:Key="TextTitleMirrorTexture">Mirror Texture</sys:String>
        <sys:String x:Key="TextTitleTransparentTexture">Texture Transparency</sys:String>
        <sys:String x:Key="TextTitleOtherTools">Other Tools</sys:String>
        <sys:String x:Key="TextTitleSettings">Settings</sys:String>

        <!--#endregion-->

        <!--#region Strings - Generic-->

        <sys:String x:Key="TextLabelBrowseButton">Browse</sys:String>
        <sys:String x:Key="TextLabelWrlFile">Wrl File</sys:String>
        <sys:String x:Key="TextLabelObjFile">Obj File</sys:String>
        <sys:String x:Key="TextLabelTextureFile">Texture File</sys:String>
        <sys:String x:Key="TextLabelAlphaFile">Alpha File</sys:String>
        <sys:String x:Key="TextLabelPicture">Picture File</sys:String>
        <sys:String x:Key="TextLabelDirectoryPath">Directory Path</sys:String>
        <sys:String x:Key="TextLabelScale">Scale</sys:String>

        <sys:String x:Key="TextLabelButtonConvertToObj">Convert to Obj</sys:String>
        <sys:String x:Key="TextLabelButtonConvertToSmd">Convert to Smd</sys:String>
        <sys:String x:Key="TextLabelButtonCopyTextures">Copy Textures</sys:String>

        <sys:String x:Key="TextLabelButtonAdd">Add...</sys:String>
        <sys:String x:Key="TextLabelButtonName">Name</sys:String>
        <sys:String x:Key="TextLabelButtonDelete">Delete</sys:String>
        
        <sys:String x:Key="TextLabelButtonAddFiles">Add Files</sys:String>
        <sys:String x:Key="TextLabelButtonRemoveFiles">Remove Selected</sys:String>
        <sys:String x:Key="TextLabelButtonSaveSettings">Save Settings</sys:String>

        <sys:String x:Key="TextLabelLetterX">X</sys:String>
        <sys:String x:Key="TextLabelLetterY">Y</sys:String>
        <sys:String x:Key="TextLabelLetterZ">Z</sys:String>
        <sys:String x:Key="TextLabelLetterXYZ">XYZ</sys:String>
        <sys:String x:Key="TextLabelReverseVertex">Reverse Vertex Order</sys:String>
        <sys:String x:Key="TextTooltipReverseVertex">Reverse every vertices of the model</sys:String>

        <!--#endregion-->

        <!--#region Strings - Wrl To Obj-->

        <sys:String x:Key="TextDescriptionWrlToObjPage">Convert wrl files to obj</sys:String>
        <sys:String x:Key="TextHeaderWrlToObj">Convert one Wrl file</sys:String>
        <sys:String x:Key="TextDescriptionWrlToObj">Convert one wrl file to obj</sys:String>
        <sys:String x:Key="TextHeaderWrlsToObj">Convert multiple Wrl files</sys:String>
        <sys:String x:Key="TextDescriptionWrlsToObj">Convert every wrl files located in the directory and its subdirectories to obj</sys:String>

        <!--#endregion-->

        <!--#region Strings - Obj Tools-->

        <sys:String x:Key="TextDescriptionObjToolsPage">Tools related to obj files</sys:String>
        <sys:String x:Key="TextHeaderDeleteMaterials">Delete Materials</sys:String>
        <sys:String x:Key="TextHeaderDeleteUnusedMaterials">Delete Unused Materials</sys:String>
        <sys:String x:Key="TextHeaderAddMaterials">Add Materials</sys:String>
        <sys:String x:Key="TextHeaderModifyObj">Modify Obj</sys:String>
        <sys:String x:Key="TextHeaderObjToSmd">Obj to Smd</sys:String>
        <sys:String x:Key="TextHeaderReferenceModel">Reference Model</sys:String>

        <!--#region Strings - Obj Tools - Delete/Add Materials-->

        <sys:String x:Key="TextDescriptionDeleteMaterials">Delete every materials from the obj file</sys:String>
        <sys:String x:Key="TextDescriptionDeleteUnusedMaterials">Delete every unused materials from the obj file</sys:String>
        <TextBlock x:Key="TextBlockDescriptionAddMaterials" Style="{StaticResource ToolParagraphDescription}">
            Automatically create materials and assign textures to each object of the obj<LineBreak/>
            Objects names need to contain the texture name
        </TextBlock>

        <!--#endregion-->

        <!--#region Strings - Obj Tools - Modify Obj-->

        <TextBlock x:Key="TextBlockDescriptionModifyObj" Style="{StaticResource ToolParagraphDescription}">
            Modify the obj file based on your selection<LineBreak/>
            Some options require the obj file to have an associated mtl file
        </TextBlock>
        <sys:String x:Key="TextLabelModifyObjMerge">Merge Groups &amp; Materials</sys:String>
        <sys:String x:Key="TextTooltipModifyObjMerge">Merge together groups &amp; materials sharing a texture</sys:String>
        <sys:String x:Key="TextLabelModifyObjSort">Sort Groups &amp; Materials</sys:String>
        <sys:String x:Key="TextTooltipModifyObjSort">Sort groups &amp; materials by name alphabetically</sys:String>

        <sys:String x:Key="TextLabelModifyObjScaleUni">Uniform Scaling</sys:String>
        <sys:String x:Key="TextTooltipModifyObjScaleUni">Scale uniformly the model by the specified value</sys:String>
        <TextBlock x:Key="TextBlockModifyObjScaleUni" Style="{StaticResource ToolListOfCheckBoxesText}" Text="{StaticResource TextLabelModifyObjScaleUni}"/>

        <sys:String x:Key="TextLabelModifyObjScaleNonUni">Non Uniform Scaling</sys:String>
        <sys:String x:Key="TextTooltipModifyObjScaleNonUni">Scale uniformly the model by the specified value</sys:String>
        <TextBlock x:Key="TextBlockModifyObjScaleNonUni" Style="{StaticResource ToolListOfCheckBoxesText}" Text="{StaticResource TextLabelModifyObjScaleNonUni}"/>

        <sys:String x:Key="TextLabelModifyObjRotate">Rotate Model</sys:String>
        <sys:String x:Key="TextTooltipModifyObjRotate">Rotate the model by the specified values</sys:String>
        <TextBlock x:Key="TextBlockModifyObjRotate" Style="{StaticResource ToolListOfCheckBoxesText}" Text="{StaticResource TextLabelModifyObjRotate}"/>

        <sys:String x:Key="TextLabelModifyObjBlackList">Delete Objects using BlackList</sys:String>
        <sys:String x:Key="TextTooltipModifyObjBlackList">Delete Objects that use specific textures (See Settings for more informations)</sys:String>
        <TextBlock x:Key="TextBlockModifyObjBlackList" Style="{StaticResource ToolListOfCheckBoxesText}" Text="{StaticResource TextLabelModifyObjBlackList}"/>
        <sys:String x:Key="TextLabelModifyObjBlackListConfig">Config</sys:String>
        <sys:String x:Key="TextLabelModifyObjBlackListSetup">Setup BlackList</sys:String>

        <!--#endregion-->

        <!--#region Strings - Obj Tools - Obj to Smd/Reference Model-->

        <sys:String x:Key="TextDescriptionObjToSmd">Convert a obj file to smd</sys:String>
        <sys:String x:Key="TextDescriptionReferenceModel">Convert a obj file to smd at a given scale and without any material</sys:String>

        <sys:String x:Key="TextLabelSmdUseMaterials">Use the Materials names for the VMTs</sys:String>
        <sys:String x:Key="TextTooltipSmdUseMaterials">The compiled model will load VMTs named like the materials</sys:String>
        <sys:String x:Key="TextLabelSmdUseTextures">Use the Textures names for the VMTs</sys:String>
        <sys:String x:Key="TextTooltipSmdUseTextures">The compiled model will load VMTs named like the textures</sys:String>

        <!--#endregion-->

        <!--#endregion-->

        <!--#region Strings - Copy Textures-->

        <sys:String x:Key="TextLabelDirectoryOutput">Output Directory</sys:String>
        <sys:String x:Key="TextLabelDirectoryOutputSame">Copy Textures into the Obj File Directory</sys:String>
        <sys:String x:Key="TextLabelDirectoryTextures">Texture Directory</sys:String>
        <sys:String x:Key="TextLabelDirectoryTexturesSpecific">Use a specific Texture Directory</sys:String>
        <sys:String x:Key="TextTooltipDirectoryTexturesCopy">If unchecked, the tool will load textures from the paths defined in the obj and mtl files</sys:String>

        <TextBlock x:Key="TextBlockDescriptionCopyTexturesPage" Style="{StaticResource ToolPageDescription}">
           Copy every textures used by the obj file into the <TextBlock FontWeight="SemiBold" Text="{StaticResource TextLabelDirectoryOutput}"/><LineBreak/>
            Requires the obj file to have an associated mtl file<LineBreak/>
            If you dont specify a <TextBlock FontWeight="SemiBold" Text="{StaticResource TextLabelDirectoryTextures}"/>, it will find textures defined in the obj and mtl files
        </TextBlock>

        <!--#endregion-->

        <!--#region Strings - Flip Texture-->

        <sys:String x:Key="TextDescriptionFlipTexturePage">Flip a texture horizontally and/or vertically</sys:String>
        <sys:String x:Key="TextLabelFlipHorizontally">Flip Horizontally</sys:String>
        <sys:String x:Key="TextLabelFlipVertically">Flip Vertically</sys:String>

        <!--#endregion-->

        <!--#region Strings - Mirror Texture-->

        <sys:String x:Key="TextDescriptionMirrorTexturePage">Mirror a texture horizontally and/or vertically</sys:String>
        <sys:String x:Key="TextLabelMirrorHorizontally">Mirror Horizontally</sys:String>
        <sys:String x:Key="TextLabelMirrorVertically">Mirror Vertically</sys:String>

        <!--#endregion-->

        <!--#region Strings - Texture Transparency-->

        <TextBlock x:Key="TextBlockDescriptionTransparencyPage" Style="{StaticResource ToolPageDescription}">
            Create a transparent png from a texture and its alpha<LineBreak/>
            Both textures need to be the same size<LineBreak/>
            In the VRML dump, a texture and its alpha are called <TextBlock FontWeight="SemiBold" Text="XXXXXXXX_c.bmp" /> 
            and <TextBlock FontWeight="SemiBold" Text="XXXXXXXX_a.bmp" />
        </TextBlock>
        <sys:String x:Key="TextLabelTransparencyButton">Create Transparent Png</sys:String>

        <!--#endregion-->

        <!--#region Strings - Merge Obj Files-->

        <TextBlock x:Key="TextBlockDescriptionMergeObjPage" Style="{StaticResource ToolPageDescription}">
            Merge multiple obj files into one<LineBreak/>
            Give an unique name to every materials in order not to lose any data
        </TextBlock>
        <sys:String x:Key="TextHeaderMergeObjDirectory">Merge Obj Files from a Directory</sys:String>
        <sys:String x:Key="TextDescriptionMergeObjDirectory">Merge all obj files located in a directory into one</sys:String>

        <sys:String x:Key="TextHeaderMergeObjList">Merge Obj Files from a List</sys:String>
        <sys:String x:Key="TextDescriptionMergeObjList">Merge all obj files from the list into one</sys:String>
        <sys:String x:Key="TextLabelMergeObjList">Add obj files to merge</sys:String>

        <Style TargetType="ListBox" x:Key="StyleMergeObjText">
            <Setter Property="Margin" Value="{StaticResource MarginMixLargeLtRtSmallDw}"/>
            <Setter Property="Padding" Value="{StaticResource DefaultPadding}"/>
        </Style>

        <!--#endregion-->

        <!--#region Strings - Other Tools-->

        <sys:String x:Key="TextDescriptionOtherToolsPage">Tools not directly related to N64 models</sys:String>

        <!--#region Strings - Negative Picture-->

        <sys:String x:Key="TextHeaderNegativePicture">Negative Picture</sys:String>
        <sys:String x:Key="TextDescriptionNegativePicture">Create the Negative of a Picture</sys:String>
        <sys:String x:Key="TextLabelButtonNegativePicture">Create Negative</sys:String>

        <!--#endregion-->

        <!--#endregion-->

        <!--#region Strings - Settings-->

        <sys:String x:Key="TextDescriptionSettingsPage">Manage Settings of the App</sys:String>
        <sys:String x:Key="TextHeaderBlackListConfigs">BlackList Create/Delete Configs</sys:String>
        <!--<sys:String x:Key="TextDescriptionBlackListConfigs">Create and Delete BlackList Configs useable in Modify Obj</sys:String>-->
        <TextBlock x:Key="TextBlockDescriptionBlackListInfo" Style="{StaticResource ToolParagraphDescription}" TextWrapping="WrapWithOverflow">
            Create and Delete BlackList Configs useable in <TextBlock FontWeight="SemiBold" FontStyle="Normal" Text="{StaticResource TextHeaderModifyObj}" /><LineBreak/>
            In <TextBlock FontWeight="SemiBold" FontStyle="Normal" Text="{StaticResource TextHeaderModifyObj}" />,
            check the option <TextBlock FontWeight="SemiBold" Text="{StaticResource TextLabelModifyObjBlackList}" /> 
            and every objects of the Obj File that use a blacklisted texture will get deleted
        </TextBlock>
        <sys:String x:Key="TextHeaderBlackListTextures">BlackList Add/Remove Textures</sys:String>
        <sys:String x:Key="TextDescriptionBlackListTextures">Add Textures to BlackList Configs or Remove them</sys:String>
        <TextBlock x:Key="TextBlockDescriptionBlackListTextures" Style="{StaticResource ToolParagraphDescription}">
           Add Textures to a BlackList Config or Remove them<LineBreak/>
            Drag and Drop supported
        </TextBlock>
        <sys:String x:Key="TextHeaderBlackListCopy">BlackList Copy Textures</sys:String>
        <TextBlock x:Key="TextBlockDescriptionBlackListCopy" Style="{StaticResource ToolParagraphDescription}">
           Copy every Textures of the selected Config into the <TextBlock FontWeight="SemiBold" Text="{StaticResource TextLabelDirectoryOutput}"/>
        </TextBlock>


        <!--#endregion-->


        <!--#endregion-->

        <!--#region DataTemplate-->

        <DataTemplate x:Key="ToolBlackListTemplate">
            <TextBlock Text="{Binding Path=Name}"/>
        </DataTemplate>

        <DataTemplate x:Key="ToolBlackListTemplateBox">
            <TextBlock Text="{Binding}"/>
        </DataTemplate>

        <DataTemplate x:Key="ToolMergeObjListTemplate">
            <TextBlock Text="{Binding}"/>
        </DataTemplate>

        <!--#endregion-->

    </Window.Resources>

    <Border Style="{StaticResource ToolMainBorderStyle}">
       
        <TabControl Style="{StaticResource ToolMainTabStyle}" >

            <!--#region Wrl to Obj-->

            <TabItem Name="TabWrlToObj">
                <TabItem.Header>
                    <TextBlock Text="{StaticResource TextTitleWrlToObj}"/>
                </TabItem.Header>
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Style="{StaticResource ToolPageTitle}" Text="{StaticResource TextTitleWrlToObj}" />
                        <Grid Style="{StaticResource GridPageDescription}">
                            <TextBlock Style="{StaticResource ToolPageDescription}" Text="{StaticResource TextDescriptionWrlToObjPage}" />
                        </Grid>
                        <ContentControl Content="{StaticResource ToolSeparator}"/>
                    </StackPanel>

                    <!--DockFirstElement-->
                    <Grid Style="{StaticResource GridFirstElement}">
                        <TabControl Style="{StaticResource ToolSubTabsStyle}">

                            <!--#region Wrl to Obj - Convert one Wrl file-->

                            <TabItem Name="TabWrlToObjConvertOne">
                                <TabItem.Header>
                                    <TextBlock Text="{StaticResource TextHeaderWrlToObj}"/>
                                </TabItem.Header>
                                <StackPanel AllowDrop="True" Drop="WrlFileDrag_Drop">
                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <TextBlock Style="{StaticResource ToolParagraphDescription}" Text="{StaticResource TextDescriptionWrlToObj}" />
                                    </Grid>
                                    <ContentControl Content="{StaticResource ToolSeparator}"/>

                                    <Grid Style="{StaticResource GridFirstElement}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelWrlFile}" />
                                        <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="WrlFileTextBox" TextChanged="WrlFileTextBox_TextChanged"
                                                PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="WrlFileDrag_Drop" />

                                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="WrlFileBrowseButton" Click="WrlFileBrowseButton_Click" >
                                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                                        </Button>
                                    </Grid>

                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <CheckBox Name="WrlReverseVertexCheckbox" Style="{StaticResource ToolCheckBoxAlignCenter}" Content="{StaticResource TextLabelReverseVertex}" 
                                                    ToolTip="{StaticResource TextTooltipReverseVertex}" IsChecked="False" />
                                    </Grid>

                                    <Grid Style="{StaticResource GridLastElement}">
                                        <Button Style="{StaticResource ToolExecuteButton}" Name="WrlConvertExecuteButton" IsEnabled="False" Click="WrlConvertExecuteButton_Click" >
                                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonConvertToObj}"/>
                                        </Button>
                                    </Grid>
                                    <ContentControl Content="{StaticResource ToolSeparator}"/>
                                </StackPanel>
                            </TabItem>

                            <!--#endregion-->

                            <!--#region Wrl to Obj - Convert multiple wrl-->

                            <TabItem Name="TabWrlToObjConvertMultiple">
                                <TabItem.Header>
                                    <TextBlock Text="{StaticResource TextHeaderWrlsToObj}"/>
                                </TabItem.Header>
                                <StackPanel Name="WrlsDragDrop" AllowDrop="True" Drop="WrlsDirectoryDrag_Drop">

                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <TextBlock Style="{StaticResource ToolParagraphDescription}" Text="{StaticResource TextDescriptionWrlsToObj}"/>
                                    </Grid>
                                    <ContentControl Content="{StaticResource ToolSeparator}"/>

                                    <Grid Style="{StaticResource GridFirstElement}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelDirectoryPath}" />
                                        <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="WrlsDirectoryTextBox" 
                                                    PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="WrlsDirectoryDrag_Drop" TextChanged="WrlsDirectoryTextBox_TextChanged" />
                                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="WrlsDirectoryBrowseButton" Click="WrlsDirectoryBrowseButton_Click" >
                                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                                        </Button>
                                    </Grid>

                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <CheckBox Name="WrlsReverseVertexCheckbox" Style="{StaticResource ToolCheckBoxAlignCenter}" Content="{StaticResource TextLabelReverseVertex}" 
                                                    ToolTip="{StaticResource TextTooltipReverseVertex}" IsChecked="False" />
                                    </Grid>

                                    <Grid Style="{StaticResource GridLastElement}">
                                        <Button Style="{StaticResource ToolExecuteButton}" Name="WrlsConvertExecuteButton" IsEnabled="False" Click="WrlsConvertExecuteButton_Click" >
                                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonConvertToObj}"/>
                                        </Button>
                                    </Grid>
                                    <ContentControl Content="{StaticResource ToolSeparator}"/>
                                </StackPanel>
                            </TabItem>

                            <!--#endregion-->

                        </TabControl>
                    </Grid>

                </DockPanel>
            </TabItem>

            <!--#endregion-->

            <!--#region Obj Tools-->

            <TabItem Name="TabObjTools">
                <TabItem.Header>
                    <TextBlock Text="{StaticResource TextTitleObjTools}"/>
                </TabItem.Header>
                <DockPanel>
  
                    <!--#region Obj Tools - Generic-->

                    <StackPanel DockPanel.Dock="Top" AllowDrop="True" Drop="ObjFileDrag_Drop">
                        <TextBlock Style="{StaticResource ToolPageTitle}" Text="{StaticResource TextTitleObjTools}" />
                        <Grid Style="{StaticResource GridPageDescription}">
                            <TextBlock Style="{StaticResource ToolPageDescription}" Text="{StaticResource TextDescriptionObjToolsPage}" />
                        </Grid>
                        <ContentControl Content="{StaticResource ToolSeparator}"/>

                        <Grid Style="{StaticResource GridSingleElement}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelObjFile}" />
                            <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="ObjFileTextBox" TextChanged="ObjFileTextBox_TextChanged"
                                                PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="ObjFileDrag_Drop" />

                            <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="ObjFileBrowseButton" Click="ObjFileBrowseButton_Click" >
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                    
                    <!--#endregion-->

                    <Grid Style="{StaticResource GridFirstElement}">
                        <TabControl Style="{StaticResource ToolSubTabsStyle}">

                            <!--#region Obj Tools - Delete Materials-->

                            <TabItem Name="TabObjToolsDeleteMaterials">
                                <TabItem.Header>
                                    <TextBlock Text="{StaticResource TextHeaderDeleteMaterials}"/>
                                </TabItem.Header>
                                <StackPanel>
                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource ToolParagraphDescription}" Text="{StaticResource TextDescriptionDeleteMaterials}" />

                                        <Button Grid.Column="1" Style="{StaticResource ToolExecuteButton}" Name="ObjDeleteMaterialsExecuteButton" Click="ObjDeleteMaterialsExecuteButton_Click" >
                                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextHeaderDeleteMaterials}"/>
                                        </Button>
                                    </Grid>
                                    <ContentControl Content="{StaticResource ToolSeparator}"/>
                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource ToolParagraphDescription}" Text="{StaticResource TextDescriptionDeleteUnusedMaterials}" />

                                        <Button Grid.Column="1" Style="{StaticResource ToolExecuteButton}" Name="ObjDeleteUnusedMaterialsExecuteButton" Click="ObjDeleteUnusedMaterialsExecuteButton_Click" >
                                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextHeaderDeleteUnusedMaterials}"/>
                                        </Button>
                                    </Grid>
                                    <ContentControl Content="{StaticResource ToolSeparator}"/>
                                </StackPanel>
                            </TabItem>

                            <!--#endregion-->

                            <!--#region Obj Tools - Add Materials-->

                            <TabItem Name="TabObjToolsAddMaterials">
                                <TabItem.Header>
                                    <TextBlock Text="{StaticResource TextHeaderAddMaterials}"/>
                                </TabItem.Header>
                                <StackPanel>
                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentControl Grid.Column="0"  Content="{StaticResource TextBlockDescriptionAddMaterials}"/>

                                        <Button Grid.Column="1" Style="{StaticResource ToolExecuteButton}" Name="ObjAddMaterialsExecuteButton" Click="ObjAddMaterialsExecuteButton_Click" >
                                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextHeaderAddMaterials}"/>
                                        </Button>
                                    </Grid>
                                    <ContentControl Content="{StaticResource ToolSeparator}"/>
                                </StackPanel>
                            </TabItem>

                            <!--#endregion-->

                            <!--#region Obj Tools - Modify Obj-->

                            <TabItem Name="TabObjToolsModifyObj">
                                <TabItem.Header>
                                    <TextBlock Text="{StaticResource TextHeaderModifyObj}"/>
                                </TabItem.Header>
                                <StackPanel>
                                    <Grid Style="{StaticResource GridSingleElement}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
